{
  "info": {
    "name": "Task Flow Pro API",
    "description": "任务流程管理系统API集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "基础接口",
      "item": [
        {
          "name": "获取API信息",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                ""
              ]
            }
          }
        }
      ]
    },
    {
      "name": "健康检查",
      "item": [
        {
          "name": "健康检查",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "health"
              ]
            }
          }
        },
        {
          "name": "数据库连接测试",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health/test-db",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "health",
                "test-db"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "项目管理",
      "item": [
        {
          "name": "获取所有项目",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/projects",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "projects"
              ]
            }
          }
        },
        {
          "name": "创建新项目",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"测试项目\",\n  \"ownerId\": \"user123\",\n  \"visibility\": \"PRIVATE\",\n  \"description\": \"这是一个测试项目\",\n  \"deadline\": \"2024-12-31T23:59:59.000Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "projects"
              ]
            }
          }
        },
        {
          "name": "获取单个项目",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "projects",
                "{{projectId}}"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "项目成员管理",
      "item": [
        {
          "name": "添加项目成员",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user456\",\n  \"role\": \"COLLABORATOR\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/members",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "projects",
                "{{projectId}}",
                "members"
              ]
            }
          }
        },
        {
          "name": "获取项目成员列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/members",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "projects",
                "{{projectId}}",
                "members"
              ]
            }
          }
        },
        {
          "name": "更新成员角色",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"MANAGER\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/members/{{userId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "projects",
                "{{projectId}}",
                "members",
                "{{userId}}"
              ]
            }
          }
        },
        {
          "name": "移除项目成员",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/projects/{{projectId}}/members/{{userId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "projects",
                "{{projectId}}",
                "members",
                "{{userId}}"
              ]
            }
          }
        }
      ]
    }
  ]
}
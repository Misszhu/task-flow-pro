{
  "info": {
    "name": "Task Flow Pro Auth API",
    "description": "JWT认证API测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. 用户注册",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"测试用户\"\n}"
        },
        "url": {
          "raw": "http://localhost:3001/api/auth/register",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3001",
          "path": [
            "api",
            "auth",
            "register"
          ]
        }
      }
    },
    {
      "name": "2. 用户登录",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:3001/api/auth/login",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3001",
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "3. 获取当前用户信息",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "description": "从登录响应中获取的JWT token"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/auth/me",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3001",
          "path": [
            "api",
            "auth",
            "me"
          ]
        }
      }
    },
    {
      "name": "4. 刷新Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:3001/api/auth/refresh",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3001",
          "path": [
            "api",
            "auth",
            "refresh"
          ]
        }
      }
    },
    {
      "name": "5. 用户登出",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/auth/logout",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3001",
          "path": [
            "api",
            "auth",
            "logout"
          ]
        }
      }
    },
    {
      "name": "6. 测试受保护的项目API",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:3001/api/projects",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3001",
          "path": [
            "api",
            "projects"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "jwt_token",
      "value": "",
      "description": "从登录响应中获取的JWT token"
    },
    {
      "key": "refresh_token",
      "value": "",
      "description": "从登录响应中获取的refresh token"
    }
  ]
}